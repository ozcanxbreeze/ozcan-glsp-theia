{
  "name": "@ozcan/glsp-backend",
  "version": "1.0.0",
  "main": "lib/index.js",
  "license": "MIT",
  "files": [
    "lib",
    "src"
  ],
  "dependencies": {
    "@eclipse-glsp/server-node": "^1.0.0"
  },
  "scripts": {
    "prepare": "yarn clean && yarn build",
